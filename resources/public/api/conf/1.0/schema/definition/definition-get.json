{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "definition-get schema",
  "description": "The schema for the get definition request",
  "type": "object",
  "required": [
    "scopes",
    "api"
  ],
  "properties": {
    "scopes": {
      "description": "Key information for the api scopes",
      "type": "array",
      "items": {
        "description": "Individual api scope",
        "required": [
          "key",
          "name",
          "description"
        ],
        "properties": {
          "key": {
            "description": "A unique identifier for the api scope",
            "type": "string"
          },
          "name": {
            "description": "The name of the api scope",
            "type": "string"
          },
          "description": {
            "description": "A description of the api scope",
            "type": "string"
          }
        }
      }
    },
    "api": {
      "description": "",
      "type": "object",
      "required": [
        "name",
        "description",
        "context",
        "categories",
        "versions"
      ],
      "properties": {
        "name": {
          "description": "The api name",
          "type": "string"
        },
        "description": {
          "description": "A description of the api",
          "type": "string"
        },
        "context": {
          "description": "The uri context extension for the api (comes after main api uri)",
          "type": "string"
        },
        "categories": {
          "description": "The category that the api belongs to",
          "type": "array",
          "items": {
            "description": "A category",
            "type": "string"
          }
        },
        "versions": {
          "description": "Individual version information",
          "type": "array",
          "items": {
            "required": [
              "version",
              "status",
              "endpointsEnabled",
              "access"
            ],
            "properties": {
              "version": {
                "description": "A given version of an API",
                "type": "string"
              },
              "status": {
                "description": "The current status of the API version",
                "type": "string"
              },
              "endpointsEnabled": {
                "description": "Whether or not the endpoints are enabled for this API",
                "type": "boolean"
              },
              "access": {
                "required": [
                  "type",
                  "whitelistedApplicationIds"
                ],
                "properties": {
                  "type": {
                    "description": "The type of access",
                    "type": "string"
                  },
                  "whitelistedApplicationIds": {
                    "description": "A list of application IDs that are allowed to communicate with and use this API",
                    "type": "array",
                    "items": {
                      "description": "An application ID",
                      "type": "string"
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}
